<h5>Sign Up!</h5>
<p>It's fast and easy</p>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field form-group row">
    <div class="col">
      <h6>First Name</h6>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control form-control-sm' %>
    </div>
    <div class="col">
      <h6>Last Name</h6>
      <%= f.text_field :lastname, autofocus: true, autocomplete: "lastname", class: 'form-control form-control-sm' %>
    </div>
  </div>


  <div class="field form-group">
    <h6>Email</h6>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control form-control-sm' %>
  </div>

  <div class="field form-group">
    <h6>Password</h6>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control form-control-sm' %>
  </div>

  <div class="field form-group">
    <h6>Password Confirmation</h6>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control form-control-sm'  %>
  </div>

  <div class="actions">
    <%= f.submit "Sign Up!", class: "btn btn-sm btn-primary my-3" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
